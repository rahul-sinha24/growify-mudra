  .shop_the_look_block {
    flex-direction: column !important;
  }

   .shop-the-look_image {
    position: relative;
     width: 100%;
   
  }
  .shop_product {
      position: relative;
      width: 50%;
    }

  .shop_the_look_block {
      gap: 2rem;
  }
  
}
  
  .hotspots-wrapper.shop-the-look_item {
    padding: 20px;
  }
  
  .shop-the-look-image{
    height: 100%;
    left: 0;
    -o-object-fit: cover;
    object-fit: cover;
    opacity: 1;
    position: absolute;
    top: 0;
    width: 100%;
  }
  
  .shop_the_look_block {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
}

 
{% endstyle %}


